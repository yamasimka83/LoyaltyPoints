<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="loyaltyPoints" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Loyalty Program</label>
            <tab>customer</tab>
            <resource>LoyaltyGroup_LoyaltyPoints::loyalty</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Loyalty Program</label>
                <field id="loyalty_points_percent"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Enter the percentage of Loyalty Points</label>
                    <comment></comment>
                </field>
            </group>
        </section>
    </system>
</config>
